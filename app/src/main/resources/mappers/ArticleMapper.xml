    <select id="selectByStatus" resultType="com.chouchongkeji.service.mall.article.vo.ArticleVo">
    SELECT
    id,
    title,
    cover,
    summary,
    created,
    `type`,
           show_time
    FROM
    article
    WHERE
    status = #{status}
      and `type` = #{type}
    ORDER BY
    sort DESC,created DESC
  </select>
